    "version": "0.2.0",
    "configurations": [
        {
            // "name": "Python: 当前文件",
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            // "program": "${file}",
            "console": "integratedTerminal",
            "module": "flask",
            "env": {
                //你的启动py
                // "FLASK_APP": "${file}",
                //你的启动py
                "FLASK_APP": "${workspaceFolder}/app_server/src/main.py",
                //本机IP
                // "FLASK_RUN_HOST": "127.0.0.1",
                //端口号
                // "FLASK_RUN_PORT": "5000",
                "FLASK_ENV": "development",
                //开启debug模式
                "FLASK_DEBUG": "1",
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
        },

        // 当前文件启动方式
        {
            "name": "Python: 当前文件",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
    ]
